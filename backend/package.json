{
  "name": "capstone_project",
  "version": "1.0.0",
  "description": "Backend API for Flutter authentication",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "NODE_ENV=test jest --runInBand",
    "test:coverage": "NODE_ENV=test jest --runInBand --coverage"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testTimeout": 30000,
    "forceExit": true,
    "detectOpenHandles": true,
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/helpers/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/config/**",
      "!**/__tests__/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/jest.setup.js"
    ]
  },
  "keywords": [
    "express",
    "mongodb",
    "authentication",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@simplewebauthn/server": "^13.2.2",
    "axios": "^1.6.0",
    "base64url": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "chai": "^4.5.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "ethers": "^6.16.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "google-auth-library": "^9.14.1",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "mongoose": "^9.0.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.15.2",
    "philippine-administrative-divisions": "^2.0.3",
    "qrcode": "^1.5.4",
    "web3": "^4.16.0"
  },
  "optionalDependencies": {
    "cookie-parser": "^1.4.7",
    "express-session": "^1.18.2",
    "openid-client": "^5.7.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.0",
    "nodemailer": "^7.0.12",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
