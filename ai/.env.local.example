# Example .env.local - Copy this to .env.local and customize

# ==========================================
# TensorFlow Configuration
# ==========================================
TF_GPU_ENABLED=0
TF_CPP_MIN_LOG_LEVEL=2
TF_FORCE_GPU_ALLOW_GROWTH=true

# ==========================================
# Model Training Configuration
# ==========================================
MODEL_FRAMEWORK=auto
RANDOM_SEED=42
EPOCHS=15
BATCH_SIZE=32
LEARNING_RATE=0.001
VALIDATION_SPLIT=0.2
TEST_SIZE=0.2

# ==========================================
# Data Processing
# ==========================================
DATA_PATH=datasets
MODEL_PATH=models
NOTEBOOK_PATH=notebooks

# ==========================================
# Logging & Monitoring
# ==========================================
LOG_LEVEL=INFO
TENSORBOARD_ENABLED=true
TENSORBOARD_LOG_DIR=./logs/tensorboard
DEBUG=false

# ==========================================
# API Integration
# ==========================================
API_BASE_URL=http://localhost:3000
MODEL_REGISTRY_URL=http://localhost:3000/api/models

# ==========================================
# Database
# ==========================================
MONGO_URI=mongodb://localhost:27017/capstone-ai
DB_NAME=capstone-ai

# ==========================================
# Development
# ==========================================
NODE_ENV=development
JUPYTER_PORT=8888

# ==========================================
# Export Settings
# ==========================================
EXPORT_FORMAT=h5
EXPORT_COMPRESSION=1

# ==========================================
# Advanced TensorFlow (Optional)
# ==========================================
MIXED_PRECISION=false
DISTRIBUTED_TRAINING=false
NUM_PARALLEL_CALLS=4
PREFETCH_BUFFER_SIZE=32
